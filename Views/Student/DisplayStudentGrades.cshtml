@model List<WebApplication1.ViewModels.CrsResultViewModel>

@{
    ViewData["Title"] = $"Display {Model.FirstOrDefault().StudentName} Grades";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.0/css/bootstrap.min.css">
    <style>
        .card-header {
            background-color: #007bff;
            color: white;
        }
        .table thead th {
            border-bottom: 2px solid #dee2e6;
            background-color: #007bff;
            color: #fff;
        }
        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(0, 123, 255, 0.1);
        }
        .table-hover tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.15);
        }
        .table td, .table th {
            padding: 1rem;
            vertical-align: middle;
        }
        .table {
            margin-bottom: 0;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h2 class="mb-0 text-center">@Model.FirstOrDefault().StudentName Grades</h2>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Course Name</th>
                            <th scope="col">Department</th>
                            <th scope="col">Minimum Degree</th>
                            <th scope="col">Degree</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CourseName</td>
                                <td>@item.Departement</td>
                                <td>@item.MinDegree</td>
                                <td>@item.Degree</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.0/js/bootstrap.min.js"></script>
</body>
</html>





