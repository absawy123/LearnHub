@model Instructor

@{
    SelectList departments = new(ViewBag.departments, "Id", "Name");

 }

<h2 class="text-center mb-2">Instructor Info</h2>
<form method="post" action="/Instructor/SaveEdit/@Model.Id" class="form-control w-80 col-lg justify-content-center ">
    <div>
        <label asp-for="Name" class="fw-bold form-control-lg"></label>
        <input asp-for="Name" class="form form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div>
        <label asp-for="Address" class="fw-bold form-control-lg"></label>
        <input asp-for="Address" class="form form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Salary" class="fw-bold form-control-lg"></label>
        <input asp-for="Salary" class="form form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Image"></label>
        <input asp-for="Image" class="form-control " type="hidden" autocomplete="off" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <label asp-for="Dept_Id" class="fw-bold form-control-lg">Department </label>
    <select class="form-select" asp-for="Dept_Id" class="form form-control" asp-items="departments">
       @*  @foreach (Department dept in ViewBag.departments)
        {
            if(Model.Dept_Id == dept.Id)
            {
                <option value="@dept.Id" selected>@dept.Name</option>
            }
            else
            {
                <option value="@dept.Id">@dept.Name</option>
            }

        } *@

    </select>

    <input type="submit" value="Save" class="btn btn-success mt-5"/>


</form>

@section Scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}






